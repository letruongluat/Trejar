<div class="modal fade" id="modal-visualisation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <!-- ko with: dialogCurrentCard -->
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-pencil"></span>Request <span data-bind="text:demande"></span></h4>
            </div>
            <div class="modal-body">
                <h4 class="blue smaller">
                    <i class="icon-calendar"></i>
                    Task
                </h4>
                @Html.Partial("Salle/_CardDetails")

                <h4 class="blue smaller">
                    <i class="icon-list"></i>
                    Steps
                </h4>

                @Html.Partial("Salle/_Steps")

                <h4 class="blue smaller">
                    <i class="icon-comments-alt"></i>
                    Conversation
                </h4>
                @Html.Partial("Salle/_MessagesList")
            </div>            
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
    <!-- /ko -->
</div><!-- /.modal -->